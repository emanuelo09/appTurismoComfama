<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background2">

    <ImageButton
        android:id="@+id/iconHotels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/hotel"
        app:layout_constraintBottom_toTopOf="@id/textHotels"
        app:layout_constraintEnd_toStartOf="@+id/iconRestaurants"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textHotels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iconHotels"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textRestaurants"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/iconhotel"
        />

    <ImageButton
        android:id="@+id/iconRestaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iconHotels"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopf="@id/textRestaurants"
        android:padding="20dp"
        android:src="@drawable/restaurant"
        />

    <TextView
        android:id="@+id/textRestaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/iconRestaurant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textHotels"
        app:layout_constraintTop_toBottomOf="@id/iconRestaurants"
        />

</android.support.constraint.ConstraintLayout>